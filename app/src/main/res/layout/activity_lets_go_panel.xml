<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car"
    android:backgroundTint="@color/WelcomeGrey"
    android:backgroundTintMode="multiply"
    android:orientation="vertical"
    tools:context=".LetsGoPanel"

    >







       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
            android:layout_below="@+id/BAC"
           android:layout_marginTop="1dp"
           android:orientation="vertical"

           >


           <TextView
               android:layout_width="342dp"
               android:layout_height="63dp"
               android:layout_gravity="center"

               android:fontFamily="@font/alf"
               android:text="@string/BUY_AND_CUSTOMS"
               android:textColor="@color/white"
               android:textSize="30sp" />


       </LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="130dp"
    android:layout_marginTop="95dp"
    android:orientation="vertical"
    android:id="@+id/BAC"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/cyber"
        android:text="@string/BC"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="90sp"

        />


</LinearLayout>


    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="665dp"
        android:layout_marginLeft="22dp"
        android:orientation="vertical"


        >

        <TextView
            android:layout_width="361dp"
            android:layout_height="match_parent"
            android:text="@string/Buy_Premium_Luxury_And_All_Types_Of_Cars_Here"
            android:textColor="@color/GG"
            android:textSize="19sp"
            android:textStyle="bold"

            />


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="617dp"
    >

    <com.google.android.material.button.MaterialButton
        android:layout_width="262dp"
        android:layout_height="wrap_content"

        android:text="@string/Lets_Get_Started"
        android:layout_marginLeft="80dp"
        android:id="@+id/letsSbtn"
        android:textStyle="bold"
        android:backgroundTint="@color/WelcomeGrey"
        app:cornerRadius="21dp"

        >



    </com.google.android.material.button.MaterialButton>

</LinearLayout>



</RelativeLayout>


